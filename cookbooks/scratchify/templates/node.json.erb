{
  "run_list": [
    "recipe[rvm::system]",
    "recipe[postgresql::server]",
    "recipe[postgresql::config_pgtune]",
    "recipe[user::data_bag]",
    "recipe[scratchify]"
  ],

  "users": ["deploy"],

  "rvm": {
    "default_ruby": "2.2.3",
    "rubies": ["2.2.3"],
    "install_rubies": true,
    "gpg": {}
  },

  "postgresql": {
    "version": "9.4",
    "enable_pgdg_yum": true,
    "enable_pgdg_apt": true,
    "password": {
      "postgres": "<%= postgresql_admin_password %>"
    },
    "config_pgtune": {
      "db_type": "web"
    }
  },

  "automatic": {
    "ipaddress": "<%= host %>"
  }
}
